<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/yl_margin_xl">

        <EditText
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yl_head_size_m"
            android:background="@null"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/yl_margin_l"
            android:textColor="@color/yl_text_dark"
            android:textSize="@dimen/yl_text_size_16" />

        <include layout="@layout/ya02wmsj_cecoe_divider_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tv_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/yl_head_size_m"
                android:layout_weight="1"
                android:background="@null"
                android:hint="验证码"
                android:maxLength="8"
                android:paddingLeft="@dimen/yl_margin_l"
                android:textColor="@color/yl_text_dark"
                android:textSize="@dimen/yl_text_size_16" />

            <TextView
                android:id="@+id/tv_find_passwd"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/lay_input"
                android:background="@drawable/ya02wmsj_cecoe_bg_btn_commit"
                android:gravity="center"
                android:paddingLeft="@dimen/yl_margin_l"
                android:paddingTop="@dimen/yl_margin_l"
                android:paddingRight="@dimen/yl_margin_l"
                android:paddingBottom="@dimen/yl_margin_l"
                android:text="获取验证码"
                android:textColor="@color/white" />
        </LinearLayout>

        <include layout="@layout/ya02wmsj_cecoe_divider_view" />

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yl_head_size_m"
            android:layout_below="@+id/tv_find_passwd"
            android:layout_marginTop="@dimen/yl_margin_xl"
            android:background="@drawable/ya02wmsj_cecoe_bg_btn_commit"
            android:gravity="center"
            android:letterSpacing="1.5"
            android:text="绑定"
            android:textColor="@color/white"
            android:textSize="@dimen/yl_text_size_16"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>