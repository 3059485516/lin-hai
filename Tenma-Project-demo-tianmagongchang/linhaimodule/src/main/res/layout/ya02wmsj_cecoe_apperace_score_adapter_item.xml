<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/ya02wmsj_cecoe_divider_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/yl_margin_l">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lineSpacingMultiplier="1.2"
            android:text="平均分平均分平均分平均分平均分平均分平均分"
            android:textColor="@color/yl_main_black"
            android:textSize="@dimen/yl_text_size_14" />

        <LinearLayout
            android:id="@+id/wrap_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_0"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/yl_margin_s"
                android:layout_marginRight="@dimen/yl_margin_s"
                android:background="@drawable/ya02wmsj_cecoe_star"
                android:button="@null" />

            <CheckBox
                android:id="@+id/cb_1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/yl_margin_s"
                android:layout_marginRight="@dimen/yl_margin_s"
                android:background="@drawable/ya02wmsj_cecoe_star"
                android:button="@null" />

            <CheckBox
                android:id="@+id/cb_2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/yl_margin_s"
                android:layout_marginRight="@dimen/yl_margin_s"
                android:background="@drawable/ya02wmsj_cecoe_star"
                android:button="@null" />

            <CheckBox
                android:id="@+id/cb_3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/yl_margin_s"
                android:layout_marginRight="@dimen/yl_margin_s"
                android:background="@drawable/ya02wmsj_cecoe_star"
                android:button="@null" />

            <CheckBox
                android:id="@+id/cb_4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/yl_margin_s"
                android:layout_marginRight="@dimen/yl_margin_s"
                android:background="@drawable/ya02wmsj_cecoe_star"
                android:button="@null" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/yl_margin_l"
        android:gravity="center"
        android:text="平均分：3.2" />
</LinearLayout>