<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/yl_margin_l"
    android:layout_marginTop="@dimen/yl_margin_l"
    android:layout_marginRight="@dimen/yl_margin_l"
    android:background="@drawable/ya02wmsj_cecoe_bg_comment"
    android:padding="@dimen/yl_margin_l">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ya02wmsj_cecoe_head" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/yl_margin_l"
        android:layout_toRightOf="@+id/iv_icon"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="@dimen/yl_text_size_17"
        tools:text="李宁" />

    <TextView
        android:id="@+id/tv_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tv_name"
        android:gravity="right"
        android:textColor="@color/yl_text_dark"
        android:textSize="@dimen/yl_text_size_15"
        tools:text="志愿队伍" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/yl_margin_xl"
        tools:text="医疗救助" />

    <TextView
        android:id="@+id/tv_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/yl_margin_s"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/yl_text_light"
        android:textSize="@dimen/yl_text_size_13"
        tools:text="临海市古城街道文化社区" />
</RelativeLayout>