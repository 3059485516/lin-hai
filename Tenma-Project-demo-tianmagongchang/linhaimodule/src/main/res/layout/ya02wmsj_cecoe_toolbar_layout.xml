<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/yl_title_height">

    <ImageView
        android:id="@+id/toolbar_iv_back"
        style="@style/YLAppTitleIcon"
        android:src="@mipmap/ya02wmsj_cecoe_app_back"
        android:visibility="visible" />

    <TextView
        android:id="@+id/toolbar_tv_title"
        style="@style/YLAppTitleText"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@null"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="3dp"
        tools:text="TITLE" />

    <TextView
        android:id="@+id/toolbar_tv_right"
        style="@style/YLAppTitleText"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="15dp"
        android:text="发布"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/toolbar_iv_menu"
        style="@style/YLAppTitleIcon"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/toolbar_tv_menu"
        style="@style/YLAppTitleMenu"
        android:visibility="visible"
        android:layout_alignParentRight="true" />
</RelativeLayout>