<?xml version="1.0" encoding="utf-8"?>
<com.ya02wmsj_cecoe.linhaimodule.widget.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/yl_margin_l">

        <com.amap.api.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yl_margin_l"
            android:text="小王律师咨询"
            android:textColor="#000000"
            android:textSize="@dimen/yl_text_size_17" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yl_margin_l"
            android:text="提供法律援助"
            android:textColor="@color/yl_text_dark"
            android:textSize="@dimen/yl_text_size_14" />

        <TextView
            android:id="@+id/tv_service_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yl_margin_l"
            android:gravity="end"
            android:text="每周六下午2点到5点"
            android:textColor="@color/yl_text_light"
            android:textSize="@dimen/yl_text_size_14" />

        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yl_margin_l"
            android:gravity="end"
            android:text="浙江省台州市临海市古城街道叶下线"
            android:textColor="@color/yl_text_light"
            android:textSize="@dimen/yl_text_size_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yl_margin_l"
            android:text="成员"
            android:textColor="#000000"
            android:textSize="@dimen/yl_text_size_16" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yl_margin_l" />
    </LinearLayout>
</com.ya02wmsj_cecoe.linhaimodule.widget.MyScrollView>