<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/yl_margin_l"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/yl_margin_xl"
        android:orientation="vertical"
        android:padding="@dimen/yl_margin_s">


        <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/yl_margin_l"
            android:layout_marginRight="@dimen/yl_margin_l"
            android:scaleType="centerCrop"
            android:src="@mipmap/ya02wmsj_cecoe_head"
            app:height_width="1" />


        <TextView
            android:id="@+id/tv_vote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/yl_margin_xl"
            android:layout_marginBottom="@dimen/yl_margin_xl"
            android:background="@drawable/ya02wmsj_cecoe_selector_btn_bg"
            android:ellipsize="start"
            android:gravity="center"
            android:paddingTop="@dimen/yl_margin_l"
            android:paddingBottom="@dimen/yl_margin_l"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/yl_text_size_15"
            tools:text="投票（10086票）" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/yl_text_dark"
            android:textSize="@dimen/yl_text_size_15"
            tools:text="标题1" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yl_margin_l"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/yl_text_light"
            android:textSize="@dimen/yl_text_size_15"
            tools:text="\0x45\0x99" />
    </LinearLayout>
</android.support.v7.widget.CardView>