<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/yl_margin_xl">


    <TextView
        android:id="@+id/tv_index"
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/yl_red"
        android:textSize="@dimen/yl_text_size_16"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="1" />

    <ImageView
        android:id="@+id/iv_reward"
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:src="@mipmap/ya02wmsj_cecoe_first"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/yl_margin_l"
        android:scaleType="centerCrop"
        android:src="@mipmap/ya02wmsj_cecoe_head" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/yl_margin_xl"
        android:layout_weight="1"
        android:textColor="#4c4c4c"
        android:textSize="@dimen/yl_text_size_15"
        tools:text="郭文贵" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yl_blue"
        android:textSize="@dimen/yl_text_size_15"
        tools:text="756小时" />
</LinearLayout>