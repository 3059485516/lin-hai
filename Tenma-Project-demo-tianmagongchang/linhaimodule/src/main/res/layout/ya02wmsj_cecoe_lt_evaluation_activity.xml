<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yl_graybg"
    android:orientation="vertical"
    android:padding="@dimen/yl_margin_l">

    <com.ya02wmsj_cecoe.linhaimodule.widget.YLTextViewGroup
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ya02wmsj_cecoe_bg_comment"
        app:arrow_show="true"
        app:text_color_right="@color/yl_theme_color"
        app:text_left="测评项" />

    <com.ya02wmsj_cecoe.linhaimodule.widget.YLEditTextGroup
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/yl_margin_l"
        android:background="@drawable/ya02wmsj_cecoe_bg_comment"
        app:e_text_left="活动标题"
        app:text_gravity="right" />

    <com.ya02wmsj_cecoe.linhaimodule.widget.YLTextViewGroup
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/yl_margin_l"
        android:background="@drawable/ya02wmsj_cecoe_bg_comment"
        app:arrow_show="true"
        app:text_left="活动时间" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/yl_margin_l"
        android:background="@drawable/ya02wmsj_cecoe_bg_comment"
        android:gravity="top"
        android:hint="活动描述"
        android:lines="5"
        android:maxLines="7"
        android:padding="@dimen/yl_margin_s"
        android:textSize="@dimen/yl_text_size_14" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/yl_margin_l" />
</LinearLayout>