<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/yl_margin_l"
    android:layout_marginRight="@dimen/yl_margin_l"
    android:layout_marginBottom="@dimen/yl_margin_l"
    android:background="@color/white"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/yl_margin_l">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="150px"
                android:layout_height="150px" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_icon"
                android:layout_marginLeft="@dimen/yl_margin_l"
                android:layout_toLeftOf="@+id/iv_arrow"
                android:layout_toRightOf="@+id/iv_icon"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/yl_text_dark"
                android:textSize="16sp"
                tools:text="新时代文明实践中心" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_title"
                android:layout_alignRight="@+id/tv_title"
                android:layout_alignBottom="@+id/iv_icon"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="2020-02-16 11:24:35" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="30px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ya02wmsj_cecoe_ic_right_arrow" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yl_margin_l"
            android:layout_marginBottom="@dimen/yl_margin_l"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/yl_text_size_16"
            tools:text="发起投票：2019临海十大人物评选" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ya02wmsj_cecoe_bg_input_text">

            <TextView
                android:id="@+id/tv_inner_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/yl_margin_s"
                android:textColor="@color/yl_text_dark"
                android:textSize="@dimen/yl_text_size_17"
                tools:text="6351651651651656" />

            <TextView
                android:id="@+id/tv_inner_conntent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_inner_title"
                android:ellipsize="end"
                android:maxLines="7"
                android:paddingLeft="@dimen/yl_margin_s"
                android:paddingRight="@dimen/yl_margin_s"
                android:paddingBottom="@dimen/yl_margin_s"
                android:textSize="@dimen/yl_text_size_15"
                tools:text="6351651651651656asefasdf adf adfa sdfasdfasdfaadf adfadfasdfasdf asdfa sdfasdf\nasdfasdfasdfasdfasdfasdf" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>