<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yl_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
                android:id="@+id/iv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/ya02wmsj_cecoe_placeholder"
                app:height_width="0.5" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/yl_margin_l"
                android:textColor="@color/yl_text_dark"
                android:textSize="@dimen/yl_text_size_24"
                tools:text="喜迎党的十九大思想汇报，阐述个人心得体会" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/yl_margin_l"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="@dimen/yl_text_size_15"
                    tools:text="临海市" />

                <TextView
                    android:id="@+id/tv_bmrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#999999"
                    android:textSize="@dimen/yl_text_size_15"
                    tools:text="2019-06-04" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/yl_margin_l"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/ya02wmsj_cecoe_status"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yl_red"
                    android:textSize="@dimen/yl_text_size_15"
                    tools:text="2019-06-04" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/yl_margin_l"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/ya02wmsj_cecoe_zz"/>

                <TextView
                    android:id="@+id/tv_zz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yl_main_black"
                    android:textSize="@dimen/yl_text_size_15"
                    tools:text="2019-06-04" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/yl_margin_l"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/ya02wmsj_cecoe_dz"/>

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yl_main_black"
                    android:textSize="@dimen/yl_text_size_15"
                    tools:text="2019-06-04" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/yl_margin_l"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/ya02wmsj_cecoe_fzr"/>

                <TextView
                    android:id="@+id/tv_fzr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yl_main_black"
                    android:textSize="@dimen/yl_text_size_15"
                    tools:text="2019-06-04" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/yl_margin_l"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/ya02wmsj_cecoe_lxdh"/>

                <TextView
                    android:id="@+id/tv_lxdh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yl_main_black"
                    android:textSize="@dimen/yl_text_size_15"
                    tools:text="2019-06-04" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/yl_graywhite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yl_text_dark"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="活动简介"
                android:textSize="@dimen/yl_text_size_18" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/yl_margin_l" />

            <Button
                android:id="@+id/btn_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/yl_margin_l"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginBottom="@dimen/yl_margin_l"
                android:background="@drawable/ya02wmsj_cecoe_bg_btn_commit"
                android:text="报名"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/lay_bottom"
        layout="@layout/ya02wmsj_cecoe_layout_comment_bar"
        android:visibility="gone" />
</LinearLayout>