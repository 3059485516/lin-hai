<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/yl_margin_l">

    <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
        android:id="@+id/iv_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:scaleType="centerCrop"
        app:height_width="0.75" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/yl_margin_l"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="3"
            android:text="关于台州湾集聚区我有三点建议..."
            android:textColor="@color/yl_text_dark"
            android:textSize="@dimen/yl_text_size_17" />

        <TextView
            android:id="@+id/tv_palce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yl_margin_l"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="浙江"
            android:textColor="@color/yl_text_light"
            android:textSize="@dimen/yl_text_size_13" />
    </LinearLayout>
</LinearLayout>