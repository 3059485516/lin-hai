<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/YLBaseCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/yl_margin_xl"
    android:layout_marginRight="@dimen/yl_margin_xl"
    android:layout_marginBottom="@dimen/yl_margin_l"
    android:orientation="vertical">

    <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ya02wmsj_cecoe_no_data"
        app:height_width="0.56" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#50000000"
        android:maxLines="2"
        android:padding="@dimen/yl_margin_ss"
        android:text="ceshi"
        android:textColor="@color/white"
        android:textSize="16sp" />
</android.support.v7.widget.CardView>