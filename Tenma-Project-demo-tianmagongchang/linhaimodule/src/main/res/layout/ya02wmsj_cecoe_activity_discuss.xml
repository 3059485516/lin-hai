<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yl_graybg"
    android:orientation="vertical">

    <com.ya02wmsj_cecoe.linhaimodule.widget.RecyclerScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/yl_margin_l">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/yl_text_dark"
                    android:textSize="@dimen/yl_text_size_17"
                    tools:text="说一说你为什么讨厌临海" />

                <TextView
                    android:id="@+id/tv_publish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/yl_margin_l"
                    android:layout_marginBottom="@dimen/yl_margin_l"
                    android:textColor="@color/yl_text_light"
                    android:textSize="@dimen/yl_text_size_13"
                    tools:text="发布人" />

                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_discuss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/yl_margin_l" />
        </LinearLayout>
    </com.ya02wmsj_cecoe.linhaimodule.widget.RecyclerScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yl_margin_xl"
            android:layout_marginTop="@dimen/yl_margin_s"
            android:layout_marginRight="@dimen/yl_margin_xl"
            android:layout_marginBottom="@dimen/yl_margin_s"
            android:background="@drawable/ya02wmsj_cecoe_bg_btn_discuss"
            android:text="我要跟帖"
            android:textColor="@color/yl_theme_color"
            android:textSize="@dimen/yl_text_size_17" />
    </LinearLayout>
</LinearLayout>