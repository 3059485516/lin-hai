<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/yl_margin_xl">

        <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
            android:id="@+id/iv_qk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/yl_margin_s"
            android:layout_weight="1"
            android:src="@mipmap/ya02wmsj_cecoe_qk_1"
            app:height_width="1.24" />

        <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
            android:id="@+id/iv_sc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yl_margin_s"
            android:layout_weight="1"
            android:src="@mipmap/ya02wmsj_cecoe_sc_1"
            app:height_width="1.24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/yl_margin_xl">

        <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
            android:id="@+id/iv_zjk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/yl_margin_s"
            android:layout_weight="1"
            android:src="@mipmap/ya02wmsj_cecoe_zjk_1"
            app:height_width="1.24" />

        <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
            android:id="@+id/iv_gkk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yl_margin_s"
            android:layout_weight="1"
            android:src="@mipmap/ya02wmsj_cecoe_gkk_1"
            app:height_width="1.24" />
    </LinearLayout>
</LinearLayout>