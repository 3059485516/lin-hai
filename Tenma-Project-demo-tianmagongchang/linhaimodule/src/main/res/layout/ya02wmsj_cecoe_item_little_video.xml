<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <FrameLayout
        android:id="@+id/fl_content_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_thumb_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        android:layout_marginLeft="@dimen/yl_margin_l"
        android:layout_marginBottom="@dimen/yl_margin_l"
        android:background="@drawable/ya02wmsj_cecoe_video_text_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ya02wmsj_cecoe_head" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yl_margin_l"
            android:layout_marginRight="@dimen/yl_margin_m"
            android:singleLine="true"
            android:text="李刚"
            android:textColor="@color/white"
            android:textSize="@dimen/yl_text_size_15" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_addr"
        android:layout_marginLeft="@dimen/yl_margin_l"
        android:layout_marginRight="@dimen/yl_margin_l"
        android:layout_marginBottom="@dimen/yl_margin_l"
        android:text="江南风光美不美"
        android:textColor="@color/white"
        android:textSize="@dimen/yl_text_size_16"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="@dimen/yl_margin_l"
        android:background="@drawable/ya02wmsj_cecoe_video_text_bg"
        android:paddingLeft="@dimen/yl_margin_m"
        android:paddingTop="@dimen/yl_margin_ss"
        android:paddingRight="@dimen/yl_margin_m"
        android:paddingBottom="@dimen/yl_margin_ss"
        android:text="临海市"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/wrap_bottom"
        android:textColor="@color/white" />
    <LinearLayout
        android:id="@+id/wrap_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/yl_margin_xl"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yl_margin_l"
            android:layout_marginRight="@dimen/yl_margin_ss"
            android:layout_weight="1"
            android:background="@drawable/ya02wmsj_cecoe_video_text_bg"
            android:drawableLeft="@mipmap/ya02wmsj_cecoe_good"
            android:drawablePadding="@dimen/yl_margin_s"
            android:gravity="center"
            android:paddingLeft="@dimen/yl_margin_m"
            android:paddingTop="@dimen/yl_margin_s"
            android:paddingRight="@dimen/yl_margin_m"
            android:paddingBottom="@dimen/yl_margin_s"
            android:text="130"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="@dimen/yl_text_size_15"
            android:focusable="true" />

        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yl_margin_ss"
            android:layout_marginRight="@dimen/yl_margin_ss"
            android:layout_weight="1"
            android:background="@drawable/ya02wmsj_cecoe_video_text_bg"
            android:drawableLeft="@mipmap/ya02wmsj_cecoe_collect"
            android:drawablePadding="@dimen/yl_margin_s"
            android:gravity="center"
            android:paddingLeft="@dimen/yl_margin_m"
            android:paddingTop="@dimen/yl_margin_s"
            android:paddingRight="@dimen/yl_margin_m"
            android:paddingBottom="@dimen/yl_margin_s"
            android:text="130"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="@dimen/yl_text_size_15" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yl_margin_ss"
            android:layout_marginRight="@dimen/yl_margin_ss"
            android:layout_weight="1"
            android:background="@drawable/ya02wmsj_cecoe_video_text_bg"
            android:drawableLeft="@mipmap/ya02wmsj_cecoe_icon_circle_share"
            android:drawablePadding="@dimen/yl_margin_s"
            android:gravity="center"
            android:paddingLeft="@dimen/yl_margin_m"
            android:paddingTop="@dimen/yl_margin_s"
            android:paddingRight="@dimen/yl_margin_m"
            android:paddingBottom="@dimen/yl_margin_s"
            android:text="130"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="@dimen/yl_text_size_15" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yl_margin_ss"
            android:layout_marginRight="@dimen/yl_margin_l"
            android:layout_weight="1"
            android:background="@drawable/ya02wmsj_cecoe_video_text_bg"
            android:drawableLeft="@mipmap/ya02wmsj_cecoe_icon_article_comment"
            android:drawablePadding="@dimen/yl_margin_s"
            android:gravity="center"
            android:paddingLeft="@dimen/yl_margin_m"
            android:paddingTop="@dimen/yl_margin_s"
            android:paddingRight="@dimen/yl_margin_m"
            android:paddingBottom="@dimen/yl_margin_s"
            android:text="130"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="@dimen/yl_text_size_15" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>