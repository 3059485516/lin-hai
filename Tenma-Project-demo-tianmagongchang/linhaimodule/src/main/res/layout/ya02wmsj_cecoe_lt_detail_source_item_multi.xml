<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/yl_margin_l"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/yl_margin_l">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="讲堂"
        android:textColor="#000000"
        android:textSize="@dimen/yl_text_size_16" />

    <LinearLayout
        android:id="@+id/wrap_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
            android:id="@+id/iv_pic_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/yl_margin_s"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:height_width="1" />

        <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
            android:id="@+id/iv_pic_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yl_margin_s"
            android:layout_marginRight="@dimen/yl_margin_s"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:height_width="1" />

        <com.ya02wmsj_cecoe.linhaimodule.widget.RatioImageView
            android:id="@+id/iv_pic_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yl_margin_s"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:height_width="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yl_text_dark" />
</LinearLayout>